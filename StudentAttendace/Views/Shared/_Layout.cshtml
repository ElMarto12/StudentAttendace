<!DOCTYPE html>
<html lang="lt">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Lankomumas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<main class="d-flex flex-nowrap custom-bg-white">
    <div class="d-flex flex-column flex-shrink-0 p-3 custom-bg-green sidebar">
        <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
            <span class="fs-4">Lankomumo žymėjimas</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a class="nav-link link-body-emphasis @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Lectures" ? "active-button text-light" : "")"
                   asp-controller="Home" asp-action="Lectures">
                    <i class="bi bi-book me-2"></i>
                    Paskaitos
                </a>
            </li>
            <li>
                <a class="nav-link link-body-emphasis @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Groups" ? "active-button text-light" : "")"
                   asp-controller="Home" asp-action="Groups">
                    <i class="bi bi-person me-2"></i>
                    Grupės
                </a>
            </li>
            <li>
                <a class="nav-link link-body-emphasis  @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Archives" ? "active-button text-light" : "")"
                   asp-controller="Home" asp-action="Archives">
                    <i class="bi bi-folder me-2"></i>
                    Paskaitų archyvas
                </a>
            </li>
            <li>
                <a class="nav-link link-body-emphasis  @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "GenerateReports" ? "active-button text-light" : "")"
                   asp-controller="Home" asp-action="GenerateReports">
                    <i class="bi bi-file-text me-2"></i>
                    Ataskaitos
                </a>
            </li>
        </ul>
        <hr>
        <form method="post" class="d-inline-flex" asp-controller="Login" asp-action="LogOut">
            <button type="submit" class="btn">
                <i class="bi bi-box-arrow-left"></i>
            </button>
            @await Component.InvokeAsync("TeacherInfoView")
        </form>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</main>
<script crossorigin="anonymous" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>