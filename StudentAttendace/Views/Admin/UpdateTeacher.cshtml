@using StudentAttendace.Models.DbModels
@model StudentAttendace.Models.DbModels.Teacher;

@{
    Layout = "_LayoutAdmin";
    var user = ViewBag.User as User;
}

<div class="container-fluid mt-5">
    <form asp-action="UpdateTeacher" asp-controller="Teachers" method="post" class="mt-4">
        <input hidden name="TeacherID" value="@Model.TeacherID"/>
        <input hidden name="UserId" value="@user.UserID"/>
        <input hidden name="Role" value="@user.Role"/>
        <div class="row">
            <div class="col mb-3">
                <label for="Name" class="form-label">Vardas</label>
                <input name="Name" id="Name" class="form-control" value="@Model.Name" required/>
            </div>
            <div class="col mb-3">
                <label for="LastName" class="form-label">Pavardė</label>
                <input name="LastName" id="LastName" class="form-control" value="@Model.LastName" required/>
            </div>
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">El. paštas</label>
            <input name="Email" id="Email" type="email" class="form-control" value="@user.Email" required/>
        </div>
        <div class="mb-3">
            <label for="Password" class="form-label">Slaptažodis</label>
            <input name="Password" id="Password" class="form-control" value="@user.Password" required/>
        </div>
        <button type="submit" class="custom-bg-darkblue text-light border-0 rounded mt-3 p-2">Išsaugoti</button>
    </form>
</div>
