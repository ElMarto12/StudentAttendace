@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="lt">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Prisijungimas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/StudentAttendace.styles.css" asp-append-version="true"/>
</head>
<body>
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
            <form asp-action="QrAttendance" asp-controller="Lectures" method="post" class="p-3 shadow rounded bg-light">
                <input type="hidden" name="lectureId" value="@ViewBag.LectureId" />

                <h4 class="text-center mb-4">Prisijungimas</h4>

                <div class="form-group mb-3">
                    <label for="email" class="form-label">El. paštas</label>
                    <input type="email" name="Email" id="email" class="form-control" placeholder="Įveskite el. paštą" required />
                </div>

                <div class="form-group mb-3">
                    <label for="password" class="form-label">Slaptažodis</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Įveskite slaptažodį" required />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Prisijungti</button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
